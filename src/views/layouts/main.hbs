<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>BookingUni</title>
    <link rel="stylesheet" href="/static/css/style.css" />
  </head>

  <body>

    <div id="container">

      {{#if error}}
        <div>
          {{#each error}}
            <div class="notification errorBox">
              <span>{{message}}</span>
            </div>
          {{/each}}
        </div>
      {{/if}}

      {{! <div>
        <div class="notification loadingBox">
          Loading â€¦
        </div>
        <div class="notification infoBox">
          <span>Info</span>
        </div>
      </div> }}

      <nav>
        <div class="left-container">
          <ul>
            <li><a href="/">Home</a></li>
            {{#if user}}
              <li><a href="/hotel/create">Add +</a></li>
            {{else}}
              <li><a href="/user/login">Login</a></li>
              <li><a href="/user/register">Register</a></li>
            {{/if}}
          </ul>
        </div>
        {{#if user}}
          <div class="right-container">
            <a href="/user/profile" class="log-out">{{user.username}}</a>
            <a href="/user/logout" class="log-out">Logout</a>
          </div>
        {{/if}}
      </nav>

      {{{body}}}

      <footer>@SoftUni - JS Back-end - BookingUni 2020</footer>
    </div>

  </body>

</html>